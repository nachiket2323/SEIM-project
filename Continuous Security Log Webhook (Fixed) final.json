    {
      "parameters": {
        "jsCode": "// Process HIGH SEVERITY logs only (level > 3)\nconst highSeverityLogs = [];\nconst inputItems = $input.all();\n\nfor (const item of inputItems) {\n  const body = item.json.body || [];\n\n  for (const log of body) {\n    const level = log.rule?.level ?? 0;\n    \n    // Only process logs with severity > 3\n    if (level > 3) {\n      const groups = Array.isArray(log.groups) ? log.groups.join(\", \") : \"N/A\";\n      const timestamp = log.timestamp || \"Unknown time\";\n      const description = log.rule?.description ?? \"No description\";\n      const id = log.rule?.id ?? \"N/A\";\n\n      highSeverityLogs.push(\n        `ðŸš¨ HIGH SEVERITY ALERT ðŸš¨\nTime: ${timestamp}\nLevel: ${level}\nRule ID: ${id}\nDescription: ${description}\nGroups: ${groups}\n---------------------`\n      );\n    }\n  }\n}\n\nreturn [\n  {\n    json: {\n      logs_text: highSeverityLogs.join(\"\\n\"),\n      log_type: \"high_severity\"\n    }\n  }\n];\n"
      },
